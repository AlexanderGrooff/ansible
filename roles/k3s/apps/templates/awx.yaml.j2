---
apiVersion: awx.ansible.com/v1beta1
kind: AWX
metadata:
  name: awx
  namespace: awx
spec:
  service_type: ClusterIP
  replicas: 1

  # Ingress settings
  ingress_type: ingress
  hostname: awx.alex.systems
  ingress_annotations: |
    kubernetes.io/ingress.class: "nginx"
    nginx.ingress.kubernetes.io/whitelist-source-range: {{ ",".join(trusted_ips) }}
  ingress_tls_secret: awx-tls-secret
